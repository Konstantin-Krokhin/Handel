                                <TextBlock Text ="Pfand/Leergut - Funktionen anzeigen" Grid.Column="2" Grid.Row="10" Margin="20,3" />
                                <TextBlock Text ="&quot;außer Haus&quot; - Funktion anzeigen" Grid.Column="2" Grid.Row="11" Margin="20,3" />
