                                    <ColumnDefinition Width="0"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height= "auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height= "auto"/>
                                    <RowDefinition Height= "auto"/>
                                    <RowDefinition Height= "auto"/>
                                    <RowDefinition Height= "auto"/>
                                    <RowDefinition Height= "auto"/>
                                    <RowDefinition Height= "auto"/>
                                    <RowDefinition Height="35"/>
                                </Grid.RowDefinitions>

                                <CheckBox Grid.Row="1" Grid.Column="2" VerticalContentAlignment="Center"/>
                                <CheckBox Grid.Row="2" Grid.Column="2" VerticalContentAlignment="Center"  IsChecked="True"/>
                                <CheckBox Grid.Row="3" Grid.Column="2" VerticalContentAlignment="Center" />
                                <CheckBox x:Name="AbholscheineCheckbox" Grid.Row="4" Grid.Column="2" VerticalContentAlignment="Center" Checked="AbholscheineCheckbox_Checked" Unchecked="AbholscheineCheckbox_Unchecked"/>
                                <CheckBox Name="AbholdatumCheckbox" Grid.Row="5" Grid.Column="2" VerticalContentAlignment="Center" IsEnabled="False" />
                                <CheckBox Grid.Row="6" Grid.Column="2" VerticalContentAlignment="Center" />
                                <CheckBox Grid.Row="7" Grid.Column="2" VerticalContentAlignment="Center"  IsChecked="True"/>
                                <CheckBox Grid.Row="8" Grid.Column="2" VerticalContentAlignment="Center"  />
                                <CheckBox Grid.Row="9" Grid.Column="2" VerticalContentAlignment="Center" />
                                
                                <CheckBox Name="VollstandigCheckbox" Grid.Row="4" Grid.Column="3" VerticalContentAlignment="Center" Checked="VollstandigCheckbox_Checked" IsEnabled="False" />
                                <CheckBox Name="KleinerZettelCheckbox" Grid.Row="4" Grid.Column="5" IsEnabled="False" VerticalContentAlignment="Center" Checked="KleinerZettelCheckbox_Checked" IsChecked="true" />

                                <TextBox Grid.Column="3" Grid.Row="3" Width="60" />

                                <TextBlock Text="Meldung, wenn Artikel nicht gefunden" Grid.Column="2" Grid.Row="1" Margin="20,5" />
                                <TextBlock Text="Signalton, wenn Artikel nicht gefunden" Grid.Column="2" Grid.Row="2" Margin="20,5"/>
                                <TextBlock Text = "Benachrichtigen wenn Warenbestand weniger als " Grid.Column="2" Grid.Row="3" Margin="20,0,5,5" />
                                <TextBlock Text = "Stück" Grid.Column="4" Grid.Row="3" Margin="5,0,20,5" />
                                <TextBlock Text ="Abholscheine drucken (Bondrucker)" Grid.Column="2" Grid.Row="4" Margin="20,5" />
                                <TextBlock Name="AbholdatumTextBlock" Text ="Abholdatum - Angabe" Opacity="0.5" IsEnabled="False" Grid.Column="2" Grid.Row="5" Margin="20,5" />
                                <TextBlock Text ="Rappenrundung (Schweiz)" Grid.Column="2" Grid.Row="6" Margin="20,5" />
                                <TextBlock Text ="Rabatte auf einzelne Artikel" Grid.Column="2" Grid.Row="7" Margin="20,5" />
                                <TextBlock Text ="Bei Preiseingabe statt&quot;00&quot; ein Komma verwenden" Grid.Column="2" Grid.Row="8" Margin="20,5" />
                                <TextBlock Text ="Storno (Rückgabe) als Gutschein" Grid.Column="2" Grid.Row="9" Margin="20,5" />

                                <TextBlock Text ="vollständig" Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="4" Margin="20,5" />
                                <TextBlock Text ="kleiner Zettel" Grid.Column="5" Grid.Row="4" Margin="20,5" />

                            </Grid>
                        </Border>
                    </DockPanel>

                </Grid>

            </TabItem>

            <TabItem Name="ZAbschlagTabItem" FontSize="16">
                <TabItem.Header>
                    <TextBlock Text="Z-Abschlag" Style="{StaticResource HeaderTextBlockStyle}"/>
                </TabItem.Header>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height= "*"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>

                    <DockPanel Name="ZAbschlagPanel" Grid.Row="0" Grid.RowSpan="7" Width="820" Grid.ColumnSpan="7" Grid.Column="0" Background="LightGray">
                        <Border DockPanel.Dock="Top"
                                BorderBrush="LightGray"
                                Background="White"
                                BorderThickness="2"
                                Padding="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="0"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height= "auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height= "auto"/>
                                    <RowDefinition Height= "auto"/>
                                    <RowDefinition Height= "auto"/>
                                    <RowDefinition Height= "auto"/>
                                    <RowDefinition Height= "auto"/>
                                    <RowDefinition Height= "auto"/>
                                    <RowDefinition Height="35"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Kassennummer*:" FontWeight="Bold" Grid.Column="1" Grid.Row="1" Margin="0, 8, 0, 8"/>
                                <TextBlock Text="Marke der Kasse*:" Grid.Column="1" Grid.Row="2" Margin="0, 8, 0, 8" />
                                <TextBlock Text="Modellbezeichnung*:" Grid.Column="1" Grid.Row="3" Margin="0, 8, 0, 8" />
                                <TextBlock Text="Seriennummer*:" Grid.Column="1" Grid.Row="4" Margin="0, 8, 0, 8" />
                                <TextBlock Text="Kassensoftware*:" Grid.Column="1" Grid.Row="5" Margin="0, 8, 0, 8" />
