                                <CheckBox Grid.Row="4" Grid.Column="2" VerticalContentAlignment="Center" Unchecked="CheckBox_Unchecked"/>
                                <CheckBox Grid.Row="5" Grid.Column="2" VerticalContentAlignment="Center" Unchecked="CheckBox_Unchecked" IsChecked="True"/>
                                <CheckBox Grid.Row="6" Grid.Column="2" VerticalContentAlignment="Center" Unchecked="CheckBox_Unchecked"/>
                                <CheckBox Grid.Row="7" Grid.Column="2" VerticalContentAlignment="Center" Unchecked="CheckBox_Unchecked" IsChecked="True"/>
                                <CheckBox Grid.Row="8" Grid.Column="2" VerticalContentAlignment="Center" Unchecked="CheckBox_Unchecked" IsChecked="True"/>
                                <CheckBox Grid.Row="9" Grid.Column="2" VerticalContentAlignment="Center" Unchecked="CheckBox_Unchecked"/>
                                <CheckBox Grid.Row="10" Grid.Column="2" VerticalContentAlignment="Center" Unchecked="CheckBox_Unchecked" IsChecked="True"/>
                                <CheckBox Grid.Row="11" Grid.Column="2" VerticalContentAlignment="Center" Margin="0,0,10,0"/>
                                <CheckBox Grid.Row="12" Grid.Column="2" VerticalContentAlignment="Center" Margin="0,0,10,0" IsChecked="True" />
                                <CheckBox Grid.Row="13" Grid.Column="2" VerticalContentAlignment="Center" Margin="0,0,10,0"/>
                                <CheckBox Grid.Row="14" Grid.Column="2" VerticalContentAlignment="Center" Margin="0,0,10,0" IsChecked="True" />
                                <CheckBox Grid.Row="15" Grid.Column="2" VerticalContentAlignment="Center" Margin="0,0,10,0" />
                                <CheckBox Grid.Row="16" Grid.Column="2" VerticalContentAlignment="Center" Margin="0,0,10,0" />


                                <TextBlock Text="Einmannbetrieb (nur ein Bediener möglich)" Grid.Column="2" Grid.Row="1" Margin="20,0,20,0" />
