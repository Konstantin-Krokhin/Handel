                            BorderBrush="LightGray"
                            Background="White"
                            BorderThickness="2"
                            Padding="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="auto"/>
